{
  "manifest_version": 2,
  "name": "spirius",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://player.siriusxm.com/*"
      ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "*://*.siriusxm.com/",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'",
  "icons": {
    "128": "logo128.png"
  }
}
